<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#FFFFFF" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:background="#F7E9C1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/error_pg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <include layout="@layout/tapyoca_app_bar"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/error_bg"
                        android:paddingVertical="29dp" android:paddingHorizontal="1dp"
                        android:layout_marginBottom="180dp"
                        android:layout_marginHorizontal="32dp"
                        android:clickable="true" android:focusable="true"
                        android:orientation="vertical">

                    <TextView
                            android:textColor="@color/font_color" android:textSize="36sp"
                            android:layout_marginBottom="21dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1" android:gravity="center"
                            android:fontFamily="@font/saira_regular"
                            android:text="Error"/>

                    <TextView
                            android:textColor="@color/font_color"
                            android:textSize="16sp" android:layout_marginBottom="21dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Sorry, it looks you used the wrong type of card. Please return to the main menu and use a different card"/>

                    <Button
                            android:id="@+id/returnButton"
                            android:layout_marginHorizontal="12dp"
                            android:backgroundTint="@color/main_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Return to main menu" />

                </LinearLayout>

                <include layout="@layout/tapyoca_footer"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>