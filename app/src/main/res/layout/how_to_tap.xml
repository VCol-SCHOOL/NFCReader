<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFFFFF" android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1" android:background="@color/global_background">
        <LinearLayout android:id="@+id/howToPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <include layout="@layout/tapyoca_app_bar"/>

                <TextView android:id="@+id/rqnifzxq8hco"
                        android:textColor="@color/font_color" android:textSize="24sp"
                        android:layout_marginHorizontal="34dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/saira_regular"
                        android:text="Where Do I Tap My FanCard?"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="22dp"
                        android:orientation="vertical">

                    <TextView
                            android:textColor="@color/font_color" android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="231dp" android:gravity="center"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Tap the FanCard on the back of your phone towards the top of the phone, as shown by the highlighted green area."/>
                </LinearLayout>

                <ImageView
                        android:layout_width="195dp"
                        android:layout_height="268dp"
                        android:layout_marginStart="109dp"
                        android:src="@drawable/tap_here_icon"
                        android:scaleType="fitXY"/>

                <Button
                        android:id="@+id/returnButtonHT"
                        android:layout_marginHorizontal="30dp"
                        android:backgroundTint="@color/main_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Ready to Tap?" />

                <include layout="@layout/tapyoca_footer"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>