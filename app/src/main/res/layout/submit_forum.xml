<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#FFFFFF" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/ri0jgmnsfne" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:background="@color/global_background">

        <LinearLayout
                android:id="@+id/forum_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <include layout="@layout/tapyoca_app_bar"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_background" android:paddingBottom="18dp"
                        android:layout_marginBottom="205dp" android:layout_marginHorizontal="31dp"
                        android:orientation="vertical">

                    <LinearLayout android:id="@+id/ren1pzwb45s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_header"
                            android:paddingTop="29dp" android:paddingBottom="17dp"
                            android:layout_marginBottom="36dp"
                            android:orientation="vertical">

                        <TextView
                                android:textColor="#FDF3EB"
                                android:textSize="16sp" android:layout_marginStart="23dp"
                                android:fontFamily="@font/saira_regular"
                                android:layout_height="wrap_content" android:layout_width="252dp"
                                android:text="Please enter your email address below."/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:background="@drawable/text_box_spacer"
                            android:layout_marginBottom="22dp"
                            android:layout_marginHorizontal="30dp"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/emailInput"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="16dp"
                                android:textColor="#000000"
                                android:backgroundTint="#FFFFFF"
                                android:hint="example@email.com"
                                android:inputType="textEmailAddress" />
                    </LinearLayout>

                    <Button
                            android:id="@+id/submitButton"
                            android:layout_marginHorizontal="12dp"
                            android:backgroundTint="@color/main_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="Submit" />


                </LinearLayout>
                <include layout="@layout/tapyoca_footer"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>