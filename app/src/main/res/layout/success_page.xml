                        android:fontFamily="@font/montserrat_regular"
                        android:text="We will contact you within 1-3 business days."/>

                <ImageView
                        android:layout_width="162dp" android:layout_height="162dp"
                        android:layout_marginBottom="48dp"
                        android:src="@drawable/check_mark" android:scaleType="fitXY"/>

                <TextView
                        android:textColor="#4F4F4F" android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="287dp" android:gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Having issues with another Fancardâ„¢?"/>

                <Button android:id="@+id/returnButton"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/darker_button"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/saira_regular"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:text="Tap here to restart"/>

                <include layout="@layout/tapyoca_footer"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>